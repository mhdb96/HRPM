<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/MD")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/MD")

    <link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet" defer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <link rel="icon" href="~/Images/Logo/logo.png" type="image/icon type">

    <style>
        .logoSpace {
            width: 10%;
            background: #fff;
            box-shadow: 0 4px 10px -5px #000000;
            border-radius: 0 0 10px 10px;
            padding: 25px 4px 10px 4px;
            display: inline-block;
            margin: 0 1% 0 0;
            float: left;
            overflow: hidden;
            position: relative;
            z-index: 2;
            background-color: rgb(181, 201, 235)
        }
        .logoSpace img {
            width: 100%;
            height: auto;
        }
        h1 {
            font-family: inherit;
            font-weight: 500;
            line-height: 1.1;
            color: inherit;
            display: block;
            font-size: 2em;
            font-weight: bold;
        }
    </style>
</head>
<body style="padding: 0px;">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(181, 201, 235)">
        <h1 class="logoSpace">
            <a class="navbar-brand" href="https://localhost:44301/"><img src="~/Images/Logo/gosb-logo.png" alt="GOSB KULE KDA" style=" -webkit-user-select: none;margin: auto;"></a>
        </h1>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="https://localhost:44301/">Dashboard <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:44301/userview">User List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:44301/FilesView">File List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:44301/logsview" tabindex="-1">Log List</a>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GOSB KDA</p>
        </footer>
    </div>
    <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/MD")
    @RenderSection("scripts", required: false)
</body>
</html>
    