@model IEnumerable<KDABackendLibrary.Models.UserModel>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Id).Titled("User Id");
        columns.Add(model => model.UserName).Titled("Username");
        columns.Add(model => model.CreatedAt).Titled("CreatedAt").Formatted("{0:d}");
    })
    .Empty("No data found")
    .Id("my-ajax-grid")
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 10;
        pager.RowsPerPage = 10;
    })
    .Filterable()
    .Sortable()
)
